<% title "Song" %>

<p>
  <strong>Title:</strong>
  <%= @song.title %>
</p>
<object type="application/x-shockwave-flash" data="/flash/player_mp3_mini.swf" width="200" height="20">
	<param name="movie" value="player_mp3_mini.swf" />
	<param name="bgcolor" value="375E89" />
	<param name="FlashVars" value="mp3=<%=raw @song.wav.url(:mp3)%>" />
</object><br/>
<p>
  <%= link_to "Edit", edit_song_path(@song) %> |
  <%= link_to "Destroy", @song, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", songs_path %>
</p>
